# Environment Configuration Template
# Copy this file to .env.local for local development

# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_PROFILE=default

# Application Configuration
ENVIRONMENT=dev
LOG_LEVEL=info

# Frontend Configuration (for local development)
VITE_API_URL=http://localhost:8080
VITE_AWS_REGION=ap-northeast-1
VITE_USER_POOL_ID=your-user-pool-id
VITE_USER_POOL_CLIENT_ID=your-user-pool-client-id

# DynamoDB Configuration (for local development)
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE=family-todo-local

# Lambda Configuration (for local development)
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=256