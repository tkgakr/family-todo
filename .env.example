# Family Todo App - Environment Variables Template
# Copy this file to .env and modify the values as needed

# Database Configuration
TABLE_NAME=MainTable
DYNAMODB_ENDPOINT=http://localhost:8000

# AWS Configuration (for local development)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=ap-northeast-1

# LocalStack Configuration
LOCALSTACK_ENDPOINT=http://localhost:4566

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cognito Configuration
COGNITO_USER_POOL_ID=ap-northeast-1_test
COGNITO_CLIENT_ID=test-client-id

# SQS Configuration
SQS_QUEUE_URL=http://localhost:4566/000000000000/todo-dlq

# SES Configuration
SES_FROM_EMAIL=noreply@localhost

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=todo-backend
OTEL_SERVICE_VERSION=0.1.0
OTEL_RESOURCE_ATTRIBUTES=service.name=todo-backend,service.version=0.1.0,environment=local

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Security Configuration
JWT_SECRET=local-development-secret-key-do-not-use-in-production

# Logging Configuration
RUST_LOG=debug,aws_smithy_http=warn,hyper=warn,rustls=warn
RUST_ENV=development

# Frontend Configuration
VITE_API_ENDPOINT=http://localhost:3001
VITE_WS_ENDPOINT=ws://localhost:3001
VITE_COGNITO_USER_POOL_ID=ap-northeast-1_test
VITE_COGNITO_CLIENT_ID=test-client-id
VITE_AWS_REGION=ap-northeast-1